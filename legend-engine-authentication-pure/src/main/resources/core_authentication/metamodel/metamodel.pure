import meta::pure::authentication::*;

Class <<typemodifiers.abstract>> meta::pure::authentication::AuthenticationSpec
{

}

Class meta::pure::authentication::OauthAuthenticationSpec extends meta::pure::authentication::AuthenticationSpec
{
    grantType: String[1];
    clientId: String[1];
    clientSecretVaultReference: String[0..1];
    authServerUrl: String[1];
}

Class meta::pure::authentication::UsernamePasswordAuthenticationSpec extends meta::pure::authentication::AuthenticationSpec
{
   username: String[1];
   password: VaultCredential[1];
}

Enum meta::pure::authentication::Location
{
  header,
  cookie
}

Class meta::pure::authentication::ApiKeyAuthenticationSpec extends meta::pure::authentication::AuthenticationSpec
{
   location: Location[1];
   keyName: String[1];
   value: String[1];
}

Class <<typemodifiers.abstract>> meta::pure::authentication::Credential
{

}

Class meta::pure::authentication::VaultCredential extends meta::pure::authentication::Credential
{
    vaultReference: String[1];
}